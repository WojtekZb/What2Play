@page
@model What2Play_Presentation.Pages.HomeModel

<h2>Games</h2>

@if (Model.Games != null && Model.Games.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Type</th>
                <th>Source</th>
                <th>Played</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model.Games)
            {
                <tr>
                    <td>@game.Title</td>
                    <td>@game.Description</td>
                    <td>@game.Type</td>
                    <td>@game.Source</td>
                    <td>@(game.Played ? "Yes" : "No")</td>
                    <td>
                        <!--after asp-action delete add something like asp-route-id="(at symbol)game.Id"-->
                        <a asp-page="/GameForm" asp-route-id="@game.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <form method="post" asp-route-id="@game.Id" asp-page-handler="Delete" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No games found.</p>
}
