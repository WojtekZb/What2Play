@page "{id?}"
@model GameFormModel

@{
    ViewData["Title"] = Model.IsEdit ? "Edit Game" : "Add New Game";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="Game.Id" />

    <div class="mb-3">
        <label asp-for="Game.Title" class="form-label">Title</label>
        <input asp-for="Game.Title" class="form-control" />
        <span asp-validation-for="Game.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Game.Description" class="form-label">Description</label>
        <textarea asp-for="Game.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Game.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Type</label>
        <div>
            @foreach (var type in Model.TypeList)
            {
                <div class="form-check">
                    <input type="radio"
                           asp-for="Game.Type"
                           value="@type.TypeId"
                           class="form-check-input"
                           id="type_@type.TypeId" />
                    <label class="form-check-label" for="type_@type.TypeId">
                        @type.TypeName
                    </label>
                </div>
            }
        </div>
        <span asp-validation-for="Game.Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Game.Source" class="form-label">Source</label>
        <input asp-for="Game.Source" class="form-control" />
        <span asp-validation-for="Game.Source" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Game.Played" class="form-check-input" />
        <label asp-for="Game.Played" class="form-check-label">Played</label>
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.IsEdit ? "Save Changes" : "Add Game")
    </button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}