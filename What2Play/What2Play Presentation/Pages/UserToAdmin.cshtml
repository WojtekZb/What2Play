@page
@model UserToAdminModel

<h2>User to Admin Management</h2>

<form method="post">
    <table>
        <thead>
            <tr>
                <th>UserId</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <tr>
                    <td>@Model.Users[i].Id</td>
                    <td>@Model.Users[i].email</td>
                    <td>
                        <input type="hidden" asp-for="Users[i].Id" />
                        <select asp-for="Users[i].role">
                            <option value="User" selected="@(@Model.Users[i].role == "User")">User</option>
                            <option value="Admin" selected="@(@Model.Users[i].role == "Admin")">Admin</option>
                        </select>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit">Update Roles</button>
</form>
